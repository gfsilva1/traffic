<div class="login-signup d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1>Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'py-1' } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'py-1' } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= render "devise/shared/links" %>
          <div class="form-actions btn d-flex justify-content-center text-center">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
