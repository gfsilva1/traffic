<div class='text-right tvnavbar'>
  <% if user_signed_in? %>
    <%= link_to 'new trip', trips_path %>
    <%= link_to  'my trips', my_trips_path %>
    <%= link_to 'log out', destroy_user_session_path, method: :delete  %>
    <i class=" btn fas fa-bell" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"></i>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
      <div class="offcanvas-header">
        <i type="button" id='close-btn' class="fas fa-angle-left text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></i>
        <h5 id="offcanvasRightLabel">Notifications</h5>
      </div>
      <div class="offcanvas-body">
        <% current_user.notifications.each do |notification| %>
        <div class="card">
          <p><%= notification.params[:message] %></p>
          <%= link_to notification.params[:link], notification_path(notification) %>
        </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <%= link_to 'new trip', trips_path %>
    <%= link_to 'login', new_user_session_path %>
    <%= link_to 'sign up', new_user_registration_path %>
  <% end  %>
</div>
