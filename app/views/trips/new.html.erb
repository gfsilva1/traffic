<div class="new-viagem">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1>New Trip</h1>
        <%= simple_form_for @trip do |f| %>
          <%= simple_fields_for :other do |o| %>
            <div class="py-1"><%= o.input :origin, collection: Origin.all, id: 'autocomplete' %></div>
            <div class="py-1"><%= o.input :destination, collection: Destination.all, id: 'autocompletebis' %></div>
          <% end%>
          <div class="pt-1 pb-5"><%= f.input :date %></div>
          <div class="d-flex justify-content-center"><%= f.submit class: 'btn'%></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
