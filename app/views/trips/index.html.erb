<%= render "shared/tvnavbar" %>
<div class="new-viagem">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1 class="trip-input-1">Where are you?</h1>
        <%= simple_form_for :new_trip, url: trips_details_info_path, method: :get do |o| %>
          <div class="py-1 trip-input-1"><%= o.input :origin, collection: Origin.all %></div>
        <h1 class="trip-input-2 d-none">Where are you going?</h1>
          <div class="py-1 trip-input-2 d-none"><%= o.input :destination, collection: Destination.all %></div>
        <h1 class="trip-input-3 d-none">When do you plan on leaving?</h1>
          <div class="pt-1 pb-5 trip-input-3 d-none"><%= o.input :day, as: :date %></div>
          <div class="d-flex justify-content-center trip-submit d-none"><%= o.submit class: 'btn'%></div>
        <% end%>
      </div>
    </div>
  </div>
</div>
