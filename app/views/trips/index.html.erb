<div class="navbar-absolute">
  <%= render "shared/tvnavbar" %>
</div>
<div class="new-viagem">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1 class="trip-input-1 fade show">Where are you?</h1>
        <%= simple_form_for :new_trip, url: trips_details_info_path, method: :get, required: true do |o| %>
          <div class="py-1 trip-input-1 fade show"><%= o.input :origin, collection: Origin.all %></div>
        <h1 class="trip-input-2 fade ">Where are you going?</h1>
          <div class="py-1 trip-input-2 fade"><%= o.input :destination, collection: Destination.all %></div>
        <h1 class="trip-input-3 fade">When do you plan on leaving?</h1>
          <div class="pt-1 trip-input-3 fade"><%= o.input :day, as: :date %></div>
          <div class="d-flex justify-content-center trip-submit fade"><%= o.submit class: 'btn'%></div>
          <div class="next-button text-right"><span>next</span></div>
        <% end%>
      </div>
    </div>
  </div>
</div>
