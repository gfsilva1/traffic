<%= render "shared/tvnavbar" %>
<div class="new-viagem">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1>New Trip</h1>
        <%= simple_form_for :new_trip, url: trips_details_info_path, method: :get do |o| %>
          <div class="py-1"><%= o.input :origin, collection: Origin.all %></div>
          <div class="py-1"><%= o.input :destination, collection: Destination.all %></div>
          <div class="pt-1 pb-5"><%= o.input :day, as: :date %></div>
          <div class="d-flex justify-content-center"><%= o.submit class: 'btn'%></div>
        <% end%>
      </div>
    </div>
  </div>
</div>
