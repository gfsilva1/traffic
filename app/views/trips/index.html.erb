<div class="navbar-absolute">
  <%= render "shared/tvnavbar" %>
</div>
<div class="new-viagem">
  <div class="container justify-content-center">
    <div class="row justify-content-center">
      <div class="col-sm-7" id="form-box">
        <h2 class="trip-input-1 fade show pb-3">Where are you?</h2>
        <%= simple_form_for :new_trip, url: trips_details_info_path, method: :get, required: true do |o| %>
          <div class="py-1 trip-input-1 fade show"><%= o.input :origin, collection: Origin.all, label: false%></div>
        <h2 class="trip-input-2 fade pb-3">Where are you going?</h2>
          <div class="py-1 trip-input-2 fade "><%= o.input :destination, collection: Destination.all, label: false %></div>
        <h2 class="trip-input-3 fade pb-3">When do you plan on leaving?</h2>
          <div class="pt-1 trip-input-3 fade"><%= o.input :day,label: false,  as: :string, input_html: { class:'pt-1 trip-input-3 fade datepicker' }%></div>
          <div class="d-flex justify-content-center trip-submit fade"><%= o.submit class: 'btn m-4'%></div>
        <% end%>
        <div class="next-button text-end"><span>next</span></div>
      </div>
    </div>
  </div>
</div>
