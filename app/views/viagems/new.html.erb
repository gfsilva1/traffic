<div class="new-viagem">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-7">
        <h1>Nova Viagem</h1>
        <%= simple_form_for @viagem, url: api_path(@viagem), method: :post do |f|  %>
          <div class="py-1"><%= f.input :origem %></div>
          <div class="py-1"><%= f.input :destino %></div>
          <div class="pt-1 pb-5"><%= f.input :data %></div>
          <div class="d-flex justify-content-center"><%= f.submit %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
